void writeChar(int x, int y, uint8_t c, uint8_t color, uint8_t bg)
{
	for (int8_t i=0; i<6; i++ ) {
		uint8_t line;
		if (i == 5) 
			line = 0x0;
		else 
			line = font[(c*5)+i];
		for (int8_t j = 0; j<8; j++) {
			if (line & 0x1) 
			{
				display[x+i][y+j] = color;
			}
			else
			{
				display[x+i][y+j] = bg;
			}
			line >>= 1;
		}
	}
}

